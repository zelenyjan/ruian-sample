# EditorConfig is awesome: http://EditorConfig.org
root = true

[*]
charset = utf-8
end_of_line = lf  # prettier: 'endOfLine: "lf"'
indent_style = space  # prettier: 'useTabs: false'
indent_size = 2  # prettier: 'tabWidth: 2'
trim_trailing_whitespace = true
insert_final_newline = true

[*.py]
max_line_length = 120
indent_size = 4

[*.md]
trim_trailing_whitespace = false

[Makefile]
indent_style = tab

[nginx.conf]
indent_style = space
indent_size = 2
